<Page
    x:Class="Automata.EditPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Automata"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <SplitView>
            <SplitView.Pane>
                <ListView Header="ToolBox" Margin="5,100,5,0" VerticalAlignment="Top" Height="610">
                    <ListViewItem>
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Margin="10">
                                <TextBlock Text="Node :"/>
                                <Ellipse Width="100" Height="100" StrokeThickness="10" Stroke="Black"/>
                                <TextBox x:Name="Label" Header="Label : " Width="150"/>
                            </StackPanel>
                            <StackPanel Margin="10" Width="153">
                                <StackPanel>
                                    <ToggleSwitch x:Name="isStart" Header="Start : "/>
                                    <ToggleSwitch x:Name="isEnd" Header="End : "/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem>
                        <StackPanel>
                            <TextBlock Text="Edge :"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBox Header="Label" Width="150"/>
                                <Button VerticalAlignment="Bottom" Margin="5,0,0,0">
                                    <SymbolIcon Symbol="Add"/>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem>
                        <StackPanel>
                            <TextBlock Text="Layout Fragment :"/>
                            <TextBox Width="275" Height="290"/>
                        </StackPanel>
                    </ListViewItem>
                </ListView>
            </SplitView.Pane>
            <Grid>
                <local:CanvasRenderer x:Name="Board" RequestedTheme="Light" Background="White" Margin="20,20,20,0" Height="450" VerticalAlignment="Top"/>
                <RichEditBox Margin="20,475,20,10"/>
                <AppBar VerticalAlignment="Bottom"/>
            </Grid>
        </SplitView>
    </Grid>
</Page>
