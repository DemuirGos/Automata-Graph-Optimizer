<UserControl
    x:Class="Automata.edge"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Automata"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Line x:Name="InnerLine" X1="0" Y1="0" X2="0" Y2="0" Stroke="Black" Fill="Black" StrokeThickness="5" PointerEntered="InnerLine_PointerEntered" PointerExited="InnerLine_PointerExited">
        </Line>
        <TextBox x:Name="Label" IsReadOnly="True" Text="test" Visibility="Collapsed" Foreground="Black" SelectionChanged="Label_SelectionChanged" Background="White" BorderBrush="Transparent" Width="40" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left"/>
    </Grid>
</UserControl>
